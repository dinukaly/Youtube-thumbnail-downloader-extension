{
  "manifest_version": 3,
  "name": "YouTube Thumbnail Downloader",
  "version": "1.0",
  "description": "Adds a download button to YouTube video thumbnails.",
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": []
}
